﻿@using OnlineBankingApp.Core.ViewModels.User
@model LoginViewModel

@{
    ViewData["Title"] = "Log In";
}

<style>
    .login-container{
        margin: 0 auto;
        background-color: white;
        width: 300px;
        min-width: 300px;
        max-width: 350px;
        border-radius: 15px;
        padding: 0 5px 5px 5px;
        box-shadow: 0px 0px 15px 4px rgba(61,27,79,0.8);
    }

    h1 {
        margin: 5px auto -10px auto;
        background-color: white;
        width: 200px;
        min-width: 200px;
        max-width: 200px;
        border-radius: 15px;
        padding: 0 5px 5px 5px;
        text-align: center;
        align-items: center;
        box-shadow: 0px 0px 15px 4px rgba(61,27,79,0.8);
    }

    #login-btn{
        background-color: deepskyblue;
        border-radius: 15px;
        color: white;
        margin: 5px;
        padding: 0;
    }
</style>

<h1 >@ViewData["Title"]</h1>
<div class="login-container">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" class="form-control" autocomplete="email" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Password" class="form-label">Password</label>
                    <input asp-for="@Model.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button class="user-btn" type="submit">LogIn</button>
                </div>
            </form>
        </section>
</div>